# =============================================================================
# Configuration OBVIO Capital
# =============================================================================
# Copiez ce fichier en .env et adaptez les valeurs à votre environnement.
# IMPORTANT: Ne jamais commiter le fichier .env !

# =============================================================================
# Configuration Django de base
# =============================================================================

# Clé secrète Django - GÉNÉREZ UNE NOUVELLE CLÉ POUR LA PRODUCTION
# Utilisez: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=votre-cle-secrete-ici-changez-la

# Mode debug - METTEZ False EN PRODUCTION
DEBUG=True

# Hôtes autorisés (séparés par des virgules)
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Base de données
# =============================================================================

# URL de la base de données
# SQLite (développement): sqlite:///db.sqlite3
# PostgreSQL (production): postgres://user:password@host:port/dbname
DATABASE_URL=sqlite:///db.sqlite3

# =============================================================================
# Sécurité (production uniquement)
# =============================================================================

# Domaines autorisés pour CSRF (séparés par des virgules)
# Exemple: https://obviocapital.com,https://www.obviocapital.com
CSRF_TRUSTED_ORIGINS=

# =============================================================================
# Configuration Email
# =============================================================================

# Backend email
# Console (développement): django.core.mail.backends.console.EmailBackend
# SMTP (production): django.core.mail.backends.smtp.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Configuration SMTP (production)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@obviocapital.com

# =============================================================================
# Logging
# =============================================================================

# Niveau de log Django (DEBUG, INFO, WARNING, ERROR, CRITICAL)
DJANGO_LOG_LEVEL=INFO
